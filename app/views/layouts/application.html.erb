<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:700 rel="stylesheet">
  </head>
    <body>
      <% if logged_in? %>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                  <span class="sr-only">Bootstrap</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
              <%= link_to "InstagramClone", posts_path,class: "navbar-brand" %>
            </div>
            <% if logged_in? %>
              <div id="gnavi" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                  <li><%= link_to "プロフィール", user_path(current_user.id) %></li>
                  <li><%= link_to "新規投稿", new_post_path %></li>
                  <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
                </ul>
              </div>
            <% end %>
          </div>
        </nav>
      <% end %>
       <div class="container"> 
      <% flash.each do |message_type, message| %>
          <div class="header-msg">
            <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
          </div>
      <% end %>

    <%= yield %>
    
      </div>
    <div class="container-fluid">
      <footer class="footer">
        <p>Powered by Aguru Itabashi</p>
      </footer>
    </div>
  </body>
</html>
