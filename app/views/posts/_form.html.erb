<%= form_with(model: @post,url: choose_new_or_edit, local: true) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <th><%= f.label :title,"題名" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
      <th><%= f.label :content,"内容" %></th>
      <td><%= f.text_area :content %></td>
    <tr>
      <th><%= f.label :image,"画像" %></th>
      <td>
        <%= image_tag(@post.post_image.url) if @post.post_image && @post.post_image.url %>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </td>
    <tr>
      <th></th>
      <td><%= f.submit "投稿" %></td>
    </tr>
  </table>
<% end %>